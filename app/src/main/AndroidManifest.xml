<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mirage.todolist">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/mrgtodolist"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/mrgtodolist"
        android:supportsRtl="true"
        android:theme="@style/Theme.TodoApp">
        <activity
            android:name=".view.lockscreen.LockScreenActivity"
            android:icon="@mipmap/mrgtodolist"
            android:roundIcon="@mipmap/mrgtodolist"
            android:label="@string/app_name"
            android:theme="@style/Theme.TodoApp.LockScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.todolist.TodolistActivity"
            android:icon="@mipmap/mrgtodolist"
            android:roundIcon="@mipmap/mrgtodolist"
            android:label="@string/drawer_btn_tasks"
            android:theme="@style/Theme.TodoApp.TodolistActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".view.settings.SettingsActivity"
            android:icon="@mipmap/mrgtodolist"
            android:roundIcon="@mipmap/mrgtodolist"
            android:label="@string/settings_activity_title"
            android:theme="@style/Theme.TodoApp.SettingsActivity"
            android:exported="false">
        </activity>
    </application>

</manifest>